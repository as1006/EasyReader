<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".modules.main.MainActivity">

	<include layout="@layout/toolbar"/>

	<android.support.design.widget.TabLayout
		android:id="@+id/tab_tl_indicator"
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:background="@color/white"
		app:tabIndicatorHeight="2dp"
		app:tabIndicatorFullWidth="false"
		app:tabIndicatorColor="@color/text_color_2"
		app:tabSelectedTextColor="@color/text_color_2"
		app:tabTextColor="@color/text_color_1">
	</android.support.design.widget.TabLayout>
	<View
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="#e6e8ea"/>
	<android.support.v4.view.ViewPager
		android:id="@+id/tab_vp"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1">
	</android.support.v4.view.ViewPager>

</LinearLayout>
