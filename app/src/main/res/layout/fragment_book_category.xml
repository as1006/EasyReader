<?xml version="1.0" encoding="utf-8"?>
<com.kroraina.easyreader.ui.widget.refresh.RefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/book_sort_rl_refresh"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:fitsSystemWindows="true">

    <com.kroraina.easyreader.ui.widget.scrollview.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:orientation="vertical">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_book_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </com.kroraina.easyreader.ui.widget.scrollview.ReboundScrollView>
</com.kroraina.easyreader.ui.widget.refresh.RefreshLayout>
