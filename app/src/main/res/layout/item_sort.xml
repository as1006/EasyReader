<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/selector_common_bg"
	android:gravity="center"
	android:orientation="horizontal"
	android:padding="10dp">
	
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		<TextView
			android:id="@+id/sort_tv_type"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/nb.text.default"
			android:textSize="16sp"
			tools:text="玄幻" />

		<TextView
			android:id="@+id/sort_tv_count"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/nb.text.common_h2"
			android:textSize="13sp"
			tools:text="@string/nb.sort.book_count" />
	</LinearLayout>

	<ImageView
		android:id="@+id/iv_cover"
		android:layout_width="60dp"
		android:layout_height="80dp"
		android:layout_marginBottom="5dp"
		android:layout_marginTop="5dp"
		android:layout_marginLeft="21dp"
		android:scaleType="centerInside"
		android:src="@drawable/ic_book_loading"/>
</LinearLayout>